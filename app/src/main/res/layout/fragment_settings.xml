<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shopee_orange"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/account_circle_24px" />

        <TextView
            android:id="@+id/btnLoginRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_login_button"
            android:padding="8dp"
            android:text="Đăng nhập / Đăng ký"
            android:textColor="@color/shopee_orange" />
    </LinearLayout>

    <!-- DANH SÁCH -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Mỗi dòng: -->
        <include layout="@layout/item_account_option" />

        <include layout="@layout/item_account_option" />
        <!-- Lặp lại tùy số lượng -->
    </LinearLayout>

    <!-- FOOTER -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Phiên bản 7.45.0\nFoody Corporation"
        android:textSize="12sp" />
</LinearLayout>
